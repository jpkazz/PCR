# PCR Application Backend Configuration

# Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration
DB_FILENAME=pcr-app.sqlite
DB_MAX_CONNECTIONS=10
DB_BUSY_TIMEOUT=30000
DB_ENABLE_FOREIGN_KEYS=true

# JWT Configuration (REQUIRED - Generate secure random strings)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-different-from-jwt

# Token Expiry Settings
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Encryption Configuration (REQUIRED)
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_MASTER_PASSWORD=your-encryption-master-password-minimum-16-chars
PBKDF2_ITERATIONS=100000
PBKDF2_KEY_LENGTH=32
PBKDF2_DIGEST=sha512

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_TIMEOUT=900
SESSION_WARNING_TIME=840

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=14
LOG_MAX_SIZE=10m
LOG_DATE_PATTERN=YYYY-MM-DD

# Admin Account (REQUIRED for first setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Development Only Settings (Remove in production)
# Uncomment these for easier development setup
# JWT_SECRET=dev-jwt-secret-key-32-chars-minimum-length
# REFRESH_TOKEN_SECRET=dev-refresh-secret-different-from-jwt-key
# ENCRYPTION_MASTER_PASSWORD=dev-encryption-password-16-chars
# ADMIN_PASSWORD=admin123!