{
  "name": "pcr-application",
  "version": "1.0.0",
  "description": "Modern Patient Care Report application built with React and NW.js",
  "main": "main.js",
  "homepage": "index.html",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "frontend:dev": "vite",
    "frontend:build": "vite build",
    "backend:dev": "npx ts-node --transpile-only src/backend/src/index.ts",
    "backend:build": "tsc -p src/backend/tsconfig.json",
    "create-accounts": "ts-node src/backend/src/scripts/create-users.ts",
    "build": "npm run frontend:build && npm run backend:build",
    "nw": "nw .",
    "nw:dev": "npm run build && nw .",
    "package": "npm run build && nwbuild --config-file=nwbuild.config.js",
    "package:dev": "npm run build && nwbuild --config-file=nwbuild.config.js --mode=dev",
    "package:all": "npm run build && nwbuild --config-file=nwbuild.config.js --platforms=win64,osx64,linux64",
    "create-installers": "node scripts/create-installers.js",
    "create-installers:all": "node scripts/create-installers.js --all",
    "sign-and-notarize": "node scripts/sign-and-notarize.js",
    "sign-and-notarize:all": "node scripts/sign-and-notarize.js --all",
    "release": "npm run package:all && npm run create-installers:all && npm run sign-and-notarize:all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level=moderate",
    "prepare-release": "npm run lint && npm run type-check && npm run test && npm run security-audit"
  },
  "keywords": [
    "pcr",
    "patient-care-report",
    "ems",
    "medical",
    "react",
    "nwjs",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "window": {
    "title": "PCR Application",
    "icon": "public/favicon.ico",
    "toolbar": false,
    "frame": true,
    "width": 1200,
    "height": 800,
    "min_width": 800,
    "min_height": 600,
    "resizable": true,
    "show_in_taskbar": true,
    "position": "center"
  },
  "webkit": {
    "plugin": false
  },
  "node-remote": "http://localhost:5173",
  "chromium-args": "--disable-web-security --allow-file-access-from-files --enable-node-worker",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bcrypt": "^5.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.2",
    "nw": "^0.83.0",
    "nw-builder": "^4.7.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/fabric": "^5.3.10",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "canvas": "^2.11.2",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fabric": "^6.7.1",
    "helmet": "^7.1.0",
    "html2canvas": "^1.4.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.263.1",
    "rate-limiter-flexible": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.20.1",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^12.0.0",
    "winston": "^3.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "build": {
    "productName": "PCR Application",
    "appId": "com.healthcare.pcr-app",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.medical",
      "hardenedRuntime": true,
      "entitlements": "build-assets/entitlements.plist",
      "entitlementsInherit": "build-assets/entitlements.plist"
    },
    "linux": {
      "category": "Office",
      "desktop": {
        "Name": "PCR Application",
        "Comment": "Modern Patient Care Report application",
        "Categories": "Office;Medical;"
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
